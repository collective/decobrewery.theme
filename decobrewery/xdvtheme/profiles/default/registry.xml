<registry>
  <record field="absolute_prefix" interface="collective.xdv.interfaces.ITransformSettings" name="collective.xdv.interfaces.ITransformSettings.absolute_prefix">
    <field type="plone.registry.field.TextLine">
      <description>Convert relative URLs in the theme file to absolute paths using this prefix.</description>
      <required>False</required>
      <title>Absolute URL prefix</title>
    </field>
    <value>++resource++decobrewery.static</value>
  </record>
  <record field="alternate_themes" interface="collective.xdv.interfaces.ITransformSettings" name="collective.xdv.interfaces.ITransformSettings.alternate_themes">
    <field type="plone.registry.field.List">
      <description>Define alternate themes and rules files depending on a given path. Should be of a form 'path theme rules' (or 'path rules' with xdv 0.4), where path may use a regular expression syntax, theme is a file path or URL to the theme template and rule is a file path to the rules file.</description>
      <required>False</required>
      <title>Alternate themes</title>
      <value_type type="plone.registry.field.TextLine">
        <title>Theme</title>
      </value_type>
    </field>
    <value />
  </record>
  <record field="domains" interface="collective.xdv.interfaces.ITransformSettings" name="collective.xdv.interfaces.ITransformSettings.domains">
    <field type="plone.registry.field.Set">
      <default>
        <element>localhost:8080</element>
      </default>
      <description>Domains (host names) for which the theme should apply. Should include port numbers where necessary. If virtual hosting to a subpath, include the subpath here. Note that '127.0.0.1' will not be styled, but 'localhost' is fine. This is to ensure that you can always reach this screen if things go wrong..</description>
      <required>False</required>
      <title>Domains</title>
      <value_type type="plone.registry.field.TextLine">
        <title>Domain</title>
      </value_type>
    </field>
    <value>
      <element>localhost:9080</element>
    </value>
  </record>
  <record field="enabled" interface="collective.xdv.interfaces.ITransformSettings" name="collective.xdv.interfaces.ITransformSettings.enabled">
    <field type="plone.registry.field.Bool">
      <default>False</default>
      <description>Use this option to enable or disable the theme globally. Note that the options will also affect whether the theme is used when this option is enabled.</description>
      <title>Enabled</title>
    </field>
    <value>True</value>
  </record>
  <record field="extraurl" interface="collective.xdv.interfaces.ITransformSettings" name="collective.xdv.interfaces.ITransformSettings.extraurl">
    <field type="plone.registry.field.TextLine">
      <description>It is possible to extend the XDV compiler using a custom XSLT file. If you have such a file, give a file path or URL to it here.</description>
      <required>False</required>
      <title>XSLT extension file</title>
    </field>
    <value />
  </record>
  <record field="notheme" interface="collective.xdv.interfaces.ITransformSettings" name="collective.xdv.interfaces.ITransformSettings.notheme">
    <field type="plone.registry.field.Set">
      <default>
        <element>^.*/referencebrowser_popup$</element>
        <element>^.*/manage_(?!translations_form)[^/]+$</element>
        <element>^.*/manage$</element>
        <element>^.*/image_view_fullscreen$</element>
        <element>^.*/emptypage$</element>
        <element>^.*/error_log(/.*)?$</element>
        <element>^.*/aq_parent(/.*)?$</element>
        <element>^.*/portal_javascripts(/.*)?$</element>
      </default>
      <description>Specify paths that should not be styled. May use regular expression syntax</description>
      <required>False</required>
      <title>Unstyled paths</title>
      <value_type type="plone.registry.field.TextLine">
        <title>Path</title>
      </value_type>
    </field>
    <value>
      <element>^.*/manage_(?!translations_form)[^/]+$</element>
      <element>^.*/referencebrowser_popup$</element>
      <element>^.*@@add-tile.*$</element>
      <element>^.*/error_log(/.*)?$</element>
      <element>^.*@@plone.app.standardtile.*$</element>
      <element>^.*/image_view_fullscreen$</element>
      <element>^.*@@edit-tile.*$</element>
      <element>^.*/emptypage$</element>
      <element>^.*/manage$</element>
      <element>^.*/aq_parent(/.*)?$</element>
      <element>^.*/portal_javascripts(/.*)?$</element>
      <element>^.*@@querybuilder.*$</element>
    </value>
  </record>
  <record field="read_network" interface="collective.xdv.interfaces.ITransformSettings" name="collective.xdv.interfaces.ITransformSettings.read_network">
    <field type="plone.registry.field.Bool">
      <default>False</default>
      <description>If enabled, network (http, https) urls are allowed in the rules file and this config.</description>
      <title>Read network</title>
    </field>
    <value>False</value>
  </record>
  <record field="rules" interface="collective.xdv.interfaces.ITransformSettings" name="collective.xdv.interfaces.ITransformSettings.rules">
    <field type="plone.registry.field.TextLine">
      <description>File path to the rules file</description>
      <required>False</required>
      <title>Rules file</title>
    </field>
    <value>python://decobrewery.xdvtheme/rules.xml</value>
  </record>
  <record field="theme" interface="collective.xdv.interfaces.ITransformSettings" name="collective.xdv.interfaces.ITransformSettings.theme">
    <field type="plone.registry.field.TextLine">
      <description>File path or URL to the theme template</description>
      <required>False</required>
      <title>Theme template</title>
    </field>
    <value>python://decobrewery.xdvtheme/static/homepage.html</value>
  </record>
    <record field="alternate_themes" interface="collective.xdv.interfaces.ITransformSettings" name="collective.xdv.interfaces.ITransformSettings.alternate_themes">
    <field type="plone.registry.field.List">
      <description>Define alternate themes and rules files depending on a given path. Should be of a form 'path theme rules' (or 'path rules' with xdv 0.4), where path may use a regular expression syntax, theme is a file path or URL to the theme template and rule is a file path to the rules file.</description>
      <required>False</required>
      <title>Alternate themes</title>
      <value_type type="plone.registry.field.TextLine">
        <title>Theme</title>
      </value_type>
    </field>
    <value>
      <element>^/Plone/.+$ python://decobrewery.xdvtheme/static/detailpage.html python://decobrewery.xdvtheme/rules.xml</element>
    </value>
  </record>
</registry>